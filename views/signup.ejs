<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<link rel="stylesheet" href="/css/signup.css">
<script src="/libs/validation.js"></script>
<div class="container">
<hr>

<div class="card bg-light">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Create Account</h4>
	<form>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input id="txtFirstName" name="Full name" class="form-control required" placeholder="Full name" type="text">
            </div>
            <span class="txt-red">Is required;</span>
        </div> <!-- form-group// -->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input id="txtLoginName" name="login name" class="form-control required" placeholder="login name" type="text">
            </div>
            <span class="txt-red">Is required;</span>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <input id="txtEmail" name="Email address" class="form-control required" placeholder="Email address" type="email">
            <span class="txt-red">&nbsp;</span>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
            </div>
            <input id="txtPhoneNumber" name="Phone number" class="form-control required" placeholder="Phone number" type="text">
            <span class="txt-red">&nbsp;</span>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-building"></i> </span>
            </div>
            <select id="ddRole" class="form-control required" name="Job type">
                <option selected=""> Select job type</option>
                <option>Designer</option>
                <option>Manager</option>
                <option>Accaunting</option>
            </select>
            <span class="txt-red">&nbsp;</span>
        </div> <!-- form-group end.// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input id="txtPassword" name="password" class="form-control required" placeholder="Create password" type="password">
            <span class="txt-red">&nbsp;</span>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input id="txtPasswordConfirm" name="password" class="form-control required" placeholder="Repeat password" type="password">
            <span class="txt-red">&nbsp;</span>
        </div> <!-- form-group// -->                                      
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" onclick="CreateAccount()"> Create Account  </button>
        </div> <!-- form-group// -->      
        <p class="text-center">Have an account? <a href="">Log In</a> </p>                                                                 
    </form>
</article>
</div> <!-- card.// -->

</div> 
